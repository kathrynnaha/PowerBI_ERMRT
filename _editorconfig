# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[src/*.ts]
    indent_size = 2 
    charset = utf-8
    indent_style = space
    trim_trailing_whitespace = true

[style/*.less]
    indent_size = 4
    charset = utf-8
    indent_style = space
    trim_trailing_whitespace = true
